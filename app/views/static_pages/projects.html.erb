            <small class="links"><%= link_to "Link to project", "http://shermanthetank.blogspot.ca/", target: "_blank"%> |
                <%= link_to "Link to the video of final round", "http://www.youtube.com/watch?feature=player_embedded&v=Wrp9FB19lBI", target: "_blank" %>
            </small>
          </div>
